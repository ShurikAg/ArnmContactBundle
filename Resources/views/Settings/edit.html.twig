{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% form_theme form 'ArnmAraneumBundle:Form:araneum.html.twig' %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span><br/>
  		{{ 'contact.settings.info'|trans({}, 'contact')|raw }}
	</div>
{% endblock %}

{% block title %}
	{{ parent() }} | {{ 'contact.settings.title'|trans({}, 'contact') }}
{% endblock %}

{% block content %}
	<div class="page-header">
		<h2>{{ 'contact.settings.title'|trans({}, 'contact') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	
	{% if form %}
		<form action="{{ path('arnm_contact_settings') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
			<fieldset>
				{{ form_widget(form) }}
				<div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
    			    	<input class="btn btn-primary" type="submit" value="{{ 'contact.settings.form.action.update'|trans({}, 'contact') }}"/>
    			    	<input class="btn" type="reset" value="{{ 'default.form.action.reset'|trans }}"/>
    			    </div>
			    </div>
		    </fieldset>
		</form>
	{% endif%}
{% endblock %}
